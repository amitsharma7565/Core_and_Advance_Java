<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.0.xsd">

        
        
        <context:annotation-config/>
        <!-- bean definitions here -->
        <bean class="com.Entity.Address" name ="add1">
        <property name="city" value="Shimla"/>
        <property name="state" value="Himachal"/>
        </bean>
         <bean class="com.Entity.Address" name ="add2">
        <property name="city" value="Delhi"/>
        <property name="state" value="Delhi"/>
        </bean>
        
       
        
        <bean class="com.Entity.Employee" name="emp"/>

</beans>